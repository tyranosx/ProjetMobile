<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ombre -->
    <item
        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#E0E0E0" /> <!-- Ombre gris clair -->
        </shape>
    </item>

    <!-- Champ principal avec fond blanc et bordure -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#FFFFFF"/> <!-- Fond du champ -->
            <stroke
                android:width="2dp"
                android:color="#DDDDDD" /> <!-- Bordure subtile -->
        </shape>
    </item>

</layer-list>
