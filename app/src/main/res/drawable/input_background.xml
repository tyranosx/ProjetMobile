<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bordures arrondies -->
    <corners android:radius="12dp" />

    <!-- Fond avec une légère teinte gris clair -->
    <solid android:color="#F3F3F3" />

    <!-- Bordure avec une couleur gris neutre -->
    <stroke
        android:width="2dp"
        android:color="#DDDDDD" />

    <!-- Ombre douce pour améliorer l'apparence -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
