<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/splash_background"
    android:padding="24dp">

    <!-- Logo principal -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_energy"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Titre -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_energy_management"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/energy_info"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Champs Email avec Ombre -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:drawableStart="@drawable/ic_email"
        android:padding="12dp"
        android:background="@drawable/input_background_shadow"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="12dp"/>

    <!-- Champs Mot de passe avec Toggle Password -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/input_background_shadow"
        android:paddingEnd="12dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:padding="12dp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/btnTogglePassword"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_eye_closed"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/toggle_password"/>

    </LinearLayout>

    <!-- Bouton "Mot de passe oublié" -->
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:textColor="#007BFF"
        android:gravity="end"
        android:layout_marginBottom="16dp"/>

    <!-- Bouton Se connecter avec effet Ripple -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        android:background="@drawable/button_ripple"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Bouton Créer un compte avec effet Ripple -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:background="@drawable/button_ripple"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <!-- Bouton Facebook Login -->
    <Button
        android:id="@+id/btnFacebookLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continuer_avec_facebook"
        android:background="@drawable/button_ripple"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>
</LinearLayout>
