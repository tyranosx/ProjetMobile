<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6D6D6">

    <!-- Titre -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter un équipement à un créneau"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:background="#FF00FF" />
    </LinearLayout>

    <!-- Formulaire -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="@drawable/bg_white_rounded"
        android:orientation="vertical"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Équipement"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false" />

        <Spinner
            android:id="@+id/spinnerAppliances"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Créneau"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false" />

        <Spinner
            android:id="@+id/spinnerTimeSlots"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" />

        <Button
            android:id="@+id/btnAjouterUsage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Déclarer l'utilisation"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/teal_700" />
    </LinearLayout>
</LinearLayout>
